<!--scrolling content Modal -->
<div
  class="modal fade"
  id="edit-modal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="edit-bank"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-scrollable" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="edit-bank">
          Update Bank
        </h5>
        <button
          type="button"
          class="close"
          data-bs-dismiss="modal"
          aria-label="Close"
        >
          <i data-feather="x"></i>
        </button>
      </div>
      <form action="/admin/bank?_method=PUT" method="POST" enctype="multipart/form-data">
        <div class="modal-body">

            <div class="form-group">
              <label for="bankName">Bank Name</label>
              <input
                type="text"
                class="form-control"
                id="bankName"
                name="bankName"
                placeholder="Enter Bank Name"
                required
              />
            </div>
            <div class="form-group">
              <label for="accountNumber">Account Number</label>
              <input
                type="text"
                class="form-control"
                id="accountNumber"
                name="accountNumber"
                placeholder="Enter Account Number"
                required
              />
            </div>
            <div class="form-group">
              <label for="name">Name</label>
              <input
                type="text"
                class="form-control"
                id="name"
                name="name"
                placeholder="Enter Name"
                required
              />
            </div>
            <div class="form-group">
              <label for="image">Image</label>
              <input
                type="file"
                class="form-control"
                id="image"
                name="image"
              />
            </div>

          </div>
        <div class="modal-footer">
          <input type="text" id="id" name="id" hidden>
          <button
            type="button"
            class="btn btn-light-secondary"
            data-bs-dismiss="modal"
          >
            <i class="bx bx-x d-block d-sm-none"></i>
            <span class="d-none d-sm-block">Close</span>
          </button>
          <button
            type="submit"
            class="btn btn-primary ml-1"
          >
            <i class="bx bx-check d-block d-sm-none"></i>
            <span class="d-none d-sm-block">Submit</span>
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
  i = 0;
  const showModal = (data) => {
    //put data to modal
    document.querySelector("#edit-modal #id").value = data.getAttribute("data-id");;
    document.querySelector("#edit-modal #bankName").value = data.getAttribute("data-bankName");
    document.querySelector("#edit-modal #accountNumber").value = data.getAttribute("data-accountNumber");
    document.querySelector("#edit-modal #name").value = data.getAttribute("data-name");
    // document.querySelector("#edit-modal #image").value = data.getAttribute("data-imageUrl");
  };
</script>